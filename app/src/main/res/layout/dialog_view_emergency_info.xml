<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="姓名:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editText_PersonName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="請輸入姓名" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="健康狀況:"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/editText_health"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="請輸入病症(EX:糖尿病)" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="緊急聯絡人1:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editText_ContactPerson1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="請輸入姓名" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="緊急電話1:"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/editText_ContactPhoneNumber1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="請輸入手機" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="緊急聯絡人2:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editText_ContactPerson2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="請輸入姓名" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="緊急電話2:"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/editText_ContactPhoneNumber2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="請輸入手機" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="住址:"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/editText_address"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="請輸入住址" />
    </LinearLayout>
</LinearLayout>